program correct4 =
   // stuff -- see handout
   constant i : Integer := 7;
   constant f : Boolean := FALSE;
   var x, y, z : Integer;
   var continue : Boolean;
begin
   get(x);
   z := x mod 2;
   continue := x > i;
   if x < 0 then
      y := -1;
      loop
         x := x + i/3;
         exit when x > 0;
      end loop;
   elsif x = 0 then
      y := 0;      
   else
      y := 1;
   end if;
   if continue and not f then
      put ("TRUE ");
   else
      put ("FALSE ");
   end if;
   put(x);
   put(y);
   put(z);
   newLine;
end correct4.
